# Core LiveKit credentials
LIVEKIT_API_KEY=LK_API_1234567890
LIVEKIT_API_SECRET=LK_SECRET_0123456789abcdef0123456789abcdef
LIVEKIT_HOST=http://livekit:7880
LIVEKIT_REGION=local

# Orchestrator
ORCH_LISTEN=0.0.0.0:8000
ORCH_PUBLIC_URL=http://localhost:8000
ORCH_JWT_TTL_SECONDS=60

# Twilio (fill if integrating PSTN)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_NUMBER=+15551234567
TWILIO_VOICE_WEBHOOK_SECRET=replace_me  # Optional signature validation
TWILIO_SIP_INGRESS_HOST=sip.example.com  # Your LiveKit SIP ingress FQDN

# STT Provider
STT_PROVIDER=deepgram
STT_API_KEY=dg_xxxxxxxxxxxxxxxxxxxxx
STT_LANGUAGE=en-US
STT_SAMPLE_RATE=16000

# TTS Provider
TTS_PROVIDER=elevenlabs
TTS_API_KEY=eleven_xxxxxxxxxxxxxxxxx
TTS_VOICE_ID=default_voice
TTS_SAMPLE_RATE=16000

# Pipecat / Agent
AGENT_RESPONSE_MODE=echo   # echo | scripted
AGENT_SCRIPTED_LINES="Hello caller.|How can I help?|Goodbye."
AGENT_BARGE_IN=true
AGENT_MAX_CONCURRENT_SESSIONS=25

# Metrics / Latency
METRICS_ENDPOINT=http://metrics:9100/ingest
METRICS_SUMMARY_PORT=9100
LATENCY_WINDOW_SECONDS=60

# Redis
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO

# Load Test
LOADTEST_CONCURRENCY=100
LOADTEST_PHRASE="testing one two three"
LOADTEST_BURST_SECONDS=5
LOADTEST_ROOM_PREFIX=lt-

# Security / JWT
JWT_ISSUER=telephony-demo
JWT_AUDIENCE=livekit
JWT_SIGNING_ALG=HS256

# Optional Kubernetes specific overrides
POD_NAME=local
POD_REGION=local
